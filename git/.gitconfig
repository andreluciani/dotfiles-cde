	email = andrelucianidasilva@gmail.com
[github]
  user = andreluciani
[pull]
  rebase = true
[fetch]
  prune = true
[grep]
  lineNumber = true
[help]
  autocorrect = 1
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = yellow
  untracked = cyan
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
